<AuMainContainer as |m|>
  <m.content>
    <AuBodyContainer class="au-u-background-gray-100" >
      <AuToolbar @border="bottom" @size="medium" as |Group|>
        <Group class="au-u-1-1">
          <AuHeading @level="1" @skin="2">Aanvraag: inname openbaar domein voor een wielerwedstrijd</AuHeading>
        </Group>
      </AuToolbar>
      <AuBodyContainer @scroll={{true}}>
        <Form @model={{this.model.event}} />
      </AuBodyContainer>
      <AuToolbar @border="top" @size="medium" as |Group|>
        <Group>
          <AuButton {{on "click" this.submit}}>Indienen</AuButton>
          <AuLink @skin="button-naked" @route="dashboard">Annuleer</AuLink>
        </Group>
        <Group>
        </Group>
      </AuToolbar>
    </AuBodyContainer>
  </m.content>
</AuMainContainer>