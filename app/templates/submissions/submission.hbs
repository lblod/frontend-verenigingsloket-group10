<AuMainContainer as |m|>
  <m.content>
    <AuBodyContainer class="au-u-background-gray-100" >
      <AuToolbar @border="bottom" @size="medium" as |Group|>
        <Group class="au-u-1-1">
          <AuHeading @level="1" @skin="2">Aanvraag: inname openbaar domein voor een wielerwedstrijd</AuHeading>
        </Group>
      </AuToolbar>
      <AuBodyContainer @scroll={{true}}>
        <Form
          @model={{this.model.event}}
          @administrativeUnits={{this.administrativeUnits}}
          @onAddAdministrativeUnit={{this.addAdministrativeUnit}} />
      </AuBodyContainer>
      <AuToolbar @border="top" @size="medium" as |Group|>
        <Group>
          <AuButton
            @disabled={{this.isInvalid}}
            {{on "click" this.submit}}>
            Indienen
          </AuButton>
          <AuButton {{on "click" this.cancel}} @skin="naked">Annuleer</AuButton>
        </Group>
        <Group>
        </Group>
      </AuToolbar>
    </AuBodyContainer>
  </m.content>
</AuMainContainer>