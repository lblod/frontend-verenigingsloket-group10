<div class="au-c-form">
  <AuHeading @level="2" @skin="4">Algemene informatie</AuHeading>
  <AuHr />
  <AuFormRow>
    <AuLabel>
      Naam
    </AuLabel>
    <AuInput @width="block" />
  </AuFormRow>
  <AuFormRow>
    <AuLabel>
      Datum wedstrijd
    </AuLabel>
    <AuDatePicker />
  </AuFormRow>
</div>
<div class="au-c-form">
  <AuHeading @level="2" @skin="4">Aard van de wielerwedstrijd</AuHeading>
  <AuHr />
  <div class="au-o-grid au-o-grid--flush">
    <AuFormRow class="au-o-grid__item au-u-1-2@medium">
      <AuFieldset as |f|>
        <f.legend>
          <AuRadio
            @name="type"
            @value="typeOne"
          >
            Wegwedstrijd
          </AuRadio>
        </f.legend>
        <f.content class="au-u-margin-left-small">
          <AuRadioGroup
            @name="roadRace"
            as |Group|
          >
            <Group.Radio @value="roadRaceOne">Individuele wedstrijd</Group.Radio>
            <Group.Radio @value="roadRaceTwo">Wedstrijd met ploegen</Group.Radio>
          </AuRadioGroup>
          <AuRadioGroup
            @name="roadRaceTwo"
            class="au-u-margin-left"
            as |Group|
          >
            <Group.Radio @value="roadRaceTwoOne">Wedstrijd op gesloten omloop</Group.Radio>
            <Group.Radio @value="roadRaceTwoTwo">Wedstrijd op open omloop</Group.Radio>
            <Group.Radio @value="roadRaceTwoTwo">Wedstrijd in lijn</Group.Radio>
            <Group.Radio @value="roadRaceTwoTwo">Tijdrit</Group.Radio>
          </AuRadioGroup>
        </f.content>
      </AuFieldset>
    </AuFormRow>
    <AuFormRow class="au-o-grid__item au-u-1-2@medium">
      <AuFieldset as |f|>
        <f.legend>
          <AuRadio
            @name="type"
            @value="typeTwo"
          >
            Terreinwedstrijd
          </AuRadio>
        </f.legend>
        <f.content class="au-u-margin-left-small">
          <AuRadioGroup
            @name="terrainRace"
            as |Group|
          >
            <Group.Radio @value="terrainRaceOne">BMX</Group.Radio>
            <Group.Radio @value="terrainRaceTwo">Cyclocross</Group.Radio>
            <Group.Radio @value="terrainRaceThree">Mountainbike</Group.Radio>
            <Group.Radio @value="terrainRaceFour">Trial</Group.Radio>
          </AuRadioGroup>
        </f.content>
      </AuFieldset>
    </AuFormRow>
  </div>
</div>
<div class="au-c-form">
  <AuHeading @level="2" @skin="4">Categorie(en) van wielrenners welke aan de wedstrijd mogen deelnemen</AuHeading>
  <AuHr />
  <AuFormRow @alignment="default">
    <AuFieldset as |f|>
      <f.content>
        <AuRadioGroup
          @name="radios"
          @alignment="inline"
          as |Group|
        >
          <Group.Radio @value="radioOne">M</Group.Radio>
          <Group.Radio @value="radioTwo">V</Group.Radio>
          <Group.Radio @value="radioTwo">M/V</Group.Radio>
        </AuRadioGroup>
      </f.content>
    </AuFieldset>
  </AuFormRow>
  <AuFormRow @alignment="default">
    <AuFieldset as |f|>
      <f.legend>Licentie</f.legend>
      <f.content>
        <AuRadioGroup
          @name="radios"
          @alignment="inline"
          class="au-c-radiogroup--grid"
          as |Group|
        >
          <Group.Radio @value="radioOne">Elites met contract</Group.Radio>
          <Group.Radio @value="radioTwo">Elites zonder contract</Group.Radio>
          <Group.Radio @value="radioThree">Beloften (U23)</Group.Radio>
          <Group.Radio @value="radioThree">Juniores (U19)</Group.Radio>
          <Group.Radio @value="radioThree">Nieuwelingen (U17)</Group.Radio>
          <Group.Radio @value="radioThree">Aspiranten</Group.Radio>
          <Group.Radio @value="radioThree">Miniemen</Group.Radio>
          <Group.Radio @value="radioThree">Masters</Group.Radio>
          <Group.Radio @value="radioThree">Amateurs</Group.Radio>
          <Group.Radio @value="radioThree">Gentlemen</Group.Radio>
          <Group.Radio @value="radioThree">G-wielrenners</Group.Radio>
        </AuRadioGroup>
      </f.content>
    </AuFieldset>
  </AuFormRow>
</div>
<div class="au-c-form">
  <AuHeading @level="2" @skin="4">Inlichtingen betreffende de het tijdstip en de plaats van de wedstrijd</AuHeading>
