{{!-- Total parcours modal --}}
<AuModal
  @modalOpen={{this.parcoursModalOpen}}
  @closable={{this.closable}}
  @closeModal={{fn (mut this.parcoursModalOpen) false}}
  @size={{this.size}}
  @padding={{this.padding}}
  @overflow={{this.overflow}}
>
  <:title>Rij toevoegen</:title>
  <:body>
    <div class="au-o-flow">
      <AuFormRow @alignment="inline">
        <AuLabel>
          Aantal rondes
        </AuLabel>
        <AuInput />
      </AuFormRow>
      <AuFormRow @alignment="inline">
        <AuLabel>
          Ronde Km:
        </AuLabel>
        <AuFormRow
            @alignment="post"
          >
            <AuLabel for="input">
              Km
            </AuLabel>
            <AuInput id="input" />
        </AuFormRow>
      </AuFormRow>
    </div>
  </:body>
  <:footer>
    <AuButton {{on "click" (fn (mut this.parcoursModalOpen) false)}}>Rij toevoegen</AuButton>
  </:footer>
</AuModal>

