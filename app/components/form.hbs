        <AuLabel>
          Gemeente
        </AuLabel>
        <AuInput />
      </AuFormRow>
       <AuFormRow @alignment="inline">
        <AuLabel>
          Aantal afgelegde km:
        </AuLabel>
        <AuFormRow
            @alignment="post"
          >
            <AuLabel for="input">
              Km
            </AuLabel>
            <AuInput id="input" />
        </AuFormRow>
      </AuFormRow>
      <AuFormRow @alignment="inline">
        <AuLabel>
          Tijdstip van doorkomst
        </AuLabel>
        <AuTimePicker />
      </AuFormRow>
